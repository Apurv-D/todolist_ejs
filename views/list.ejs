<%- include("header")-%>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    
    <div class="box">

        <% newListTasks.forEach(function(task){ %>

            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" onchange="this.form.submit()" name="checkbox" value="<%= task._id %>"> 
                    <p><%= task.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </form>

        <% }); %>

        <form action="/" method="post" class="item">
            <input type="text" placeholder="Add your next task" name="newTask" autocomplete="off">
            <button type="submit" name="btn" value="<%= listTitle %>">+</button>
        </form>
    

    </div>    

<%- include("footer")-%>